					<h1>Admin</h1>
					<ul class="breadcrumb">
						<li>
							<a href="#"> Admin Dashboard</a>
						</li>
						<li><i class='bx bx-chevron-right' ></i></li>
						<li>
							<a class="active" href="#">Home</a>
						</li>
					</ul>
				</div>


				<a href="/addCategory" class="btn-download"> Add Category
