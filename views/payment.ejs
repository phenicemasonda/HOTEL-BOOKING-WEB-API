    <input type="hidden"  name="totalPrice"  value= "<%= totalPrice %>" required > 
    <input type="hidden" name="userId" value="<%= user %>" required>

    
<div class="product-wrapper">
  <div class="form-box" style="margin-top: 50px;">
      <h2> Checkout </h2>
         <h2 style="font-size: 24px; color: red;"> Amount: N<%= totalPrice %> </h2>
      <form action="/payment" method="post">

        <script 
        src="https://js.stripe.com/v3/"
        class="stripe-button"
        data-key=" <%= key %>"
        data-amount=" <%= totalPrice %>"
        data-currency="usd"
        data-name = "Gospel"
        description = "Order payment"
        data-locale="auto"
        src="checkout.js" defer>
        </script>

       
          <div class="input-box">
              <span class="icon"><ion-icon name="mail">
                 </ion-icon>
              </span>
              <input type="email" name="email" required>
              <label> Email</label>
          </div>
          <div class="input-box">
              <span class="icon"><ion-icon name="mail">
                 </ion-icon>
              </span>
              <input type="number" name="cardNumber" required>
              <label> Credit Card Number</label>
          </div>

          <div class="input-box">
              <span class="icon"><ion-icon name="lock-closed">
              </ion-icon></span>
              <input type="number" name="cardExpirationDay" required>
              <label> Card Expiration Month</label>
          </div>
          <div class="input-box">
              <span class="icon"><ion-icon name="lock-closed">
              </ion-icon></span>
              <input type="number" name="cardExpirationYear" required>
              <label> Card Expiration Year</label>
          </div>
          <div class="input-box">
              <span class="icon"><ion-icon name="lock-closed">
              </ion-icon></span>
              <input type="text" name="cvc" required>
              <label> CVC</label>
          </div>
          <div class="input-box">
              <span class="icon"><ion-icon name="lock-closed">
              </ion-icon></span>
              <input type="number" name="totalPrice" value="<%= totalPrice %>" required>
             
          </div>

      
          <button type="submit" class="btn" > Pay</button>
       

         
      </form>
  </div>
</div>
